{
  "name": "Go DevContainer (sihotang)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "BASE_IMAGE": "sihotang/devcontainer-base:latest"
    }
  },
  "remoteUser": "vscode",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh"
  },
  "postCreateCommand": "chezmoi init --apply sihotang || chezmoi apply"
}
